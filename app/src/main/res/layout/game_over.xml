<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_menu">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:rotation="40"
            android:background="@drawable/suricane"
            android:onClick="exit" />
        <ImageView
            android:id="@+id/ivNewHighest"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/prize"
           android:layout_centerHorizontal="true"
            />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Points: "
                    android:textColor="@color/white"
                    android:fontFamily="@font/fintik"
                    android:textSize="13sp" />

            <TextView
                android:id="@+id/tvPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:fontFamily="@font/fintik" />

            </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Highest: "
                android:textSize="13sp"
                android:textColor="@color/white"
                android:fontFamily="@font/fintik"/>

            <TextView
                android:id="@+id/tvHighest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:fontFamily="@font/fintik" />

        </TableRow>
        </TableLayout>
        <ImageView
            android:layout_gravity="bottom"
            android:layout_width="150dp"
            android:layout_alignParentBottom="true"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/character"/>
        <ImageView
            android:layout_gravity="bottom"
            android:layout_width="150dp"
            android:layout_alignParentBottom="true"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/game_character_lose"/>
    <View
        android:layout_width="1dp"
        android:layout_height="80dp" />
        <ImageButton
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="180dp"
            android:background="@drawable/restart_btn"
            android:onClick="restart" />
    </RelativeLayout>



</RelativeLayout>
